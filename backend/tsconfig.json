{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "rootDir": "./",
    "outDir": "dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "index.ts",
    "db.ts",
    "schema.ts",
    "routes.ts",
    "openai.ts",
    "encryption.ts",
    "storage.ts",
    "utils.ts"
  ]
}
